<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_my_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.modoo.modoobooks.MyInfoActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_main_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/tool_bar_color"
        android:contentInsetLeft="0dp"
        android:contentInsetStart="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetEnd="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="내 정보"
                android:textSize="18dp"
                android:textColor="#FFFF"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="12dp"/>

            <Button
                android:id="@+id/btn_modify_confirm"
                android:text="수정"
                android:textSize="15dp"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:textColor="@color/button"
                android:background="@drawable/button"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/iv_main_user"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img_user"/>

        <TextView
            android:id="@+id/tv_my_info_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_main_user"
            android:text="홍길동"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:id="@+id/tv_my_info_user_road"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_main_user"
            android:layout_below="@id/tv_my_info_user_name"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="5dp"
            android:text="읽은 책 : 50"
            android:textColor="#000"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/tv_my_info_user_borrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_main_user"
            android:layout_below="@id/tv_my_info_user_road"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="5dp"
            android:text="대출 중 : 2"
            android:textColor="#000"
            android:textSize="18dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#dadada">

        <TextView
            android:text="개인 정보"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_my_info_name"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:text="이름"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tv_my_info_name"
            android:text="홍길동"
            android:textColor="#000"
            android:textSize="17dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e1e1e1"/>




    <RelativeLayout
        android:id="@+id/rl_my_info_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:text="연락처"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tv_my_info_phone"
            android:text="010-1234-5678"
            android:textColor="#000"
            android:textSize="17dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e1e1e1"/>

    <RelativeLayout
        android:id="@+id/rl_my_info_addr"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:text="주소"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tv_my_info_addr"
            android:text="충북 청주시 서원구 충대로 1"
            android:textColor="#000"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e1e1e1"/>

    <RelativeLayout
        android:id="@+id/rl_my_info_email"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:text="이메일"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tv_my_info_email"
            android:text="erer92@naver.com"
            android:textColor="#000"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#dadada">

        <TextView
            android:text="기타 정보"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_my_info_gender"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:text="성별"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tv_my_info_gender"
            android:text="남"
            android:textColor="#000"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e1e1e1"/>


    <RelativeLayout
        android:id="@+id/rl_my_info_age"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:text="나이"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tv_my_info_age"
            android:text="26"
            android:textColor="#000"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e1e1e1"/>


</LinearLayout>
